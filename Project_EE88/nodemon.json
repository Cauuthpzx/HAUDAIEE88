{
  "watch": ["server", "client", "spa", "captcha", "scripts"],
  "ignore": [
    "node_modules",
    "dist",
    "*.db",
    "*.db-shm",
    "*.db-wal",
    "logs"
  ],
  "ext": "js,json,py,html,css",
  "delay": "500",
  "exec": "node scripts/build.js && node dist/server/server.js",
  "env": {
    "NODE_ENV": "development"
  }
}
